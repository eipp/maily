# App URLs
NEXT_PUBLIC_APP_URL=https://app.justmaily.com
NEXT_PUBLIC_LANDING_URL=https://justmaily.com
NEXT_PUBLIC_API_URL=https://api.justmaily.com
NEXT_PUBLIC_ANALYTICS_URL=https://analytics.justmaily.com
NEXT_PUBLIC_CDN_URL=https://cdn.justmaily.com

# API Configuration
API_URL=https://api.justmaily.com
API_KEY=your_api_key_here

# Authentication
NEXTAUTH_URL=https://app.justmaily.com
NEXTAUTH_SECRET=your_nextauth_secret_here

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_MESH=true
NEXT_PUBLIC_ENABLE_TRUST_VERIFICATION=true
NEXT_PUBLIC_ENABLE_REAL_TIME_COLLABORATION=true

# Analytics
NEXT_PUBLIC_ANALYTICS_ENABLED=true
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# Development Settings
# Uncomment for local development
# NEXT_PUBLIC_APP_URL=http://localhost:3000
# NEXT_PUBLIC_API_URL=http://localhost:4000
# NEXTAUTH_URL=http://localhost:3000
