# Server Configuration
PORT=4000
NODE_ENV=development
API_PREFIX=/api/v1

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/maily-analytics

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600

# JWT Authentication
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRATION=1d

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_EXCHANGE=maily-events
RABBITMQ_QUEUE=analytics-events

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=analytics-service
KAFKA_GROUP_ID=analytics-consumers

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/analytics-service.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Tracing
ENABLE_TRACING=true
TRACING_EXPORTER=jaeger
JAEGER_ENDPOINT=http://localhost:14268/api/traces
