# Maily Environment Variables

# API Configuration
API_URL=http://localhost:8000/api
APP_URL=http://localhost:3000
PORT=8000
NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/justmaily?schema=public"

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Authentication
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=86400

# Auth0 Configuration
AUTH0_DOMAIN=justmaily.auth0.com
AUTH0_API_AUDIENCE=https://api.justmaily.com
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret
AUTH0_CALLBACK_URL=http://localhost:3000/api/auth/callback
AUTH0_LOGOUT_URL=http://localhost:3000
AUTH0_MFA_ENABLED=true
AUTH0_ADMIN_ROLES=admin

# Email Service
SENDGRID_API_KEY=your_sendgrid_api_key
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_domain
EMAIL_FROM=noreply@justmaily.com

# AI Services
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"
GOOGLE_API_KEY=your_google_api_key

# AI & ML Enhancement Components
# Weights & Biases for model versioning and experiment tracking
WANDB_API_KEY=your_wandb_api_key

# Arize AI for ML observability
ARIZE_API_KEY=your_arize_api_key
ARIZE_SPACE_KEY=your_arize_space_key

# Stability AI for image generation
STABILITY_API_KEY=your_stability_api_key
STABILITY_API_HOST=https://api.stability.ai

# Helicone for API cost tracking
HELICONE_API_KEY=your_helicone_api_key
HELICONE_BASE_URL=https://api.helicone.ai

# LiteLLM for model routing
LITELLM_CACHE_ENABLED=true
LITELLM_CACHE_FOLDER=.cache/litellm

# OctoTools Configuration
OCTOTOOLS_PLANNER_MODEL=gpt-4o
OCTOTOOLS_EXECUTOR_MODEL=gpt-4o
OCTOTOOLS_MAX_STEPS=10
OCTOTOOLS_TIMEOUT=300

# Monitoring
SENTRY_DSN=your_sentry_dsn
LOGFLARE_API_KEY=your_logflare_api_key
LOGFLARE_SOURCE_ID=your_logflare_source_id

# Supabase
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_key

# Nango Integration
NANGO_API_URL=https://api.nango.dev
NANGO_SECRET_KEY=your_nango_secret_key
NANGO_PUBLIC_KEY=your_nango_public_key

# OctoTools Integration
OCTOTOOLS_API_URL=http://localhost:8001/api
OCTOTOOLS_API_KEY=your_octotools_api_key

# LinkedIn API (for Nango)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Twitter API (for Nango)
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret

# Gmail API (for Nango)
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret

# Outlook API (for Nango)
OUTLOOK_CLIENT_ID=your_outlook_client_id
OUTLOOK_CLIENT_SECRET=your_outlook_client_secret

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"

# Encryption Key for API Keys (generate using crypto.randomBytes(32).toString('base64'))
ENCRYPTION_KEY="your-encryption-key"

# Open Policy Agent
OPA_URL=http://opa:8181
OPA_POLICY_PATH=v1/data/justmaily/authz
OPA_TIMEOUT=5
