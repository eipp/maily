# GitHub Actions workflow for automated accessibility testing
name: Accessibility Testing

on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main, develop ]
  # Allow manual triggering
  workflow_dispatch:

jobs:
  accessibility-test:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v3

      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

      - name: Build web app
        run: npm run build --workspace=apps/web

      - name: Start web server
        run: npm run start --workspace=apps/web &
        env:
          PORT: 3000

      - name: Wait for server to start
        run: sleep 15

      - name: Run pa11y accessibility tests
        run: npx pa11y-ci --config .pa11yci.json

      - name: Run jest-axe component tests
        run: npm run test:a11y

      - name: Generate accessibility report
        run: |
          mkdir -p accessibility-report
          npx pa11y-ci --config .pa11yci.json --json > accessibility-report/report.json
          npx pa11y-ci-reporter-html --source accessibility-report/report.json --destination accessibility-report/report.html

      - name: Upload accessibility report
        uses: actions/upload-artifact@v3
        with:
          name: accessibility-report
          path: accessibility-report/
        if: always()
