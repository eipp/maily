# Maily Production Environment Configuration Template
# Make a copy of this file named .env.production and fill in the actual values
# IMPORTANT: Never commit the filled .env.production file to version control!

# ==========================================================================
# Database Configuration
# ==========================================================================
DATABASE_HOST=your-production-db-host.example.com
DATABASE_USER=maily_db_user
DATABASE_PASSWORD=SENSITIVE_VALUE_REPLACE_THIS # SENSITIVE: Use a strong, unique password
DATABASE_NAME=maily
DATABASE_PORT=5432

# ==========================================================================
# Redis Configuration
# ==========================================================================
REDIS_HOST=your-redis-host.example.com
REDIS_PORT=6379
REDIS_PASSWORD=SENSITIVE_VALUE_REPLACE_THIS # SENSITIVE: Use a strong, unique password

# ==========================================================================
# RabbitMQ Configuration
# ==========================================================================
RABBITMQ_HOST=your-rabbitmq-host.example.com
RABBITMQ_PORT=5672
RABBITMQ_USER=maily_rabbitmq_user
RABBITMQ_PASSWORD=SENSITIVE_VALUE_REPLACE_THIS # SENSITIVE: Use a strong, unique password
RABBITMQ_VHOST=/maily

# ==========================================================================
# Email Provider Credentials
# ==========================================================================
# Must configure at least one email provider
SENDGRID_API_KEY=SENSITIVE_VALUE_REPLACE_THIS # SENSITIVE
RESEND_API_KEY=SENSITIVE_VALUE_REPLACE_THIS # SENSITIVE
MAILGUN_API_KEY=SENSITIVE_VALUE_REPLACE_THIS # SENSITIVE
MAILGUN_DOMAIN=mail.yourdomain.com

# ==========================================================================
# AI Model Credentials
# ==========================================================================
# Required for AI features
OPENAI_API_KEY=SENSITIVE_VALUE_REPLACE_THIS # SENSITIVE: GPT-4o access
ANTHROPIC_API_KEY=SENSITIVE_VALUE_REPLACE_THIS # SENSITIVE: Claude 3.7 Sonnet access
GOOGLE_AI_API_KEY=SENSITIVE_VALUE_REPLACE_THIS # SENSITIVE: Gemini 2.0 access

# ==========================================================================
# JWT Authentication
# ==========================================================================
JWT_SECRET_KEY=SENSITIVE_VALUE_REPLACE_THIS # SENSITIVE: 32+ random characters
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ==========================================================================
# Cloud Provider Credentials
# ==========================================================================
AWS_ACCESS_KEY_ID=SENSITIVE_VALUE_REPLACE_THIS # SENSITIVE
AWS_SECRET_ACCESS_KEY=SENSITIVE_VALUE_REPLACE_THIS # SENSITIVE
AWS_REGION=us-east-1

# ==========================================================================
# Blockchain Configuration
# ==========================================================================
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-infura-project-id
POLYGON_RPC_URL=https://polygon-rpc.com
WALLET_PRIVATE_KEY=SENSITIVE_VALUE_REPLACE_THIS # SENSITIVE: Never share this!

# ==========================================================================
# Domain Configuration
# ==========================================================================
FRONTEND_URL=https://maily.io
API_URL=https://api.maily.io
CANVAS_URL=https://canvas.maily.io
BLOCKCHAIN_VERIFICATION_URL=https://verify.maily.io

# ==========================================================================
# Registry Configuration
# ==========================================================================
REGISTRY=ghcr.io/maily
REGISTRY_USERNAME=SENSITIVE_VALUE_REPLACE_THIS # SENSITIVE
REGISTRY_PASSWORD=SENSITIVE_VALUE_REPLACE_THIS # SENSITIVE

# ==========================================================================
# Monitoring Configuration
# ==========================================================================
PROMETHEUS_RETENTION_DAYS=15
GRAFANA_ADMIN_PASSWORD=SENSITIVE_VALUE_REPLACE_THIS # SENSITIVE

# ==========================================================================
# Feature Flags
# ==========================================================================
ENABLE_BLOCKCHAIN_VERIFICATION=true
ENABLE_AI_ASSISTANTS=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_MULTI_PROVIDER_EMAIL=true

# ==========================================================================
# Performance Configuration
# ==========================================================================
API_MAX_WORKERS=4
WORKER_CONCURRENCY=50
MAX_CONNECTIONS_PER_HOST=100
CONNECTION_TIMEOUT_MS=5000
POOL_TIMEOUT_MS=10000
